<div id="clearance" class="password-reset">
    <div class="page-heading">
        <div class="header-and-link">
            <h1 class="page-header"><%= t(".title") %></h1>
            <span class="page-sub-title"><%= t(".description") %></span>
        </div>
    </div>

    <%= form_for :password, html: {class: 'form form-centered'}, url: passwords_path do |form| %>
    <div class="text-field">
        <%= form.label :email %>
        <%= form.text_field :email, type: 'email' %>
    </div>

    <div class="submit-field">
        <%= form.submit %>
    </div>
    <% end %>
</div>